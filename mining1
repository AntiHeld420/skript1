local whitelist = {
  ["minecraft:coal_ore"] = true,
  ["minecraft:iron_ore"] = true,
  ["minecraft:gold_ore"] = true,
  ["minecraft:diamond_ore"] = true,
  ["minecraft:emerald_ore"] = true,
  ["minecraft:redstone_ore"] = true,
  ["minecraft:copper_ore"] = true,
  ["minecraft:lapis_ore"] = true,
  ["minecraft:deepslate_coal_ore"] = true,
  ["minecraft:deepslate_iron_ore"] = true,
  ["minecraft:deepslate_gold_ore"] = true,
  ["minecraft:deepslate_diamond_ore"] = true,
  ["minecraft:deepslate_emerald_ore"] = true,
  ["minecraft:deepslate_redstone_ore"] = true,
  ["minecraft:deepslate_copper_ore"] = true,
  ["minecraft:deepslate_lapis_ore"] = true,
}

function refuel()
  if turtle.getFuelLevel() < 100 then
    for i = 1, 16 do
      turtle.select(i)
      if turtle.refuel(0) then
        turtle.refuel(1)
        break
      end
    end
  end
end

function tryDig(dir)
  local ok, data
  if dir == "front" then ok, data = turtle.inspect()
  elseif dir == "up" then ok, data = turtle.inspectUp()
  elseif dir == "down" then ok, data = turtle.inspectDown()
  end

  if ok and data and whitelist[data.name] then
    if dir == "front" then turtle.dig()
    elseif dir == "up" then turtle.digUp()
    elseif dir == "down" then turtle.digDown()
    end
  end
end

function clearBlockDown()
  if turtle.detectDown() then
    turtle.digDown()
  end
end

function clearBlockFront()
  if turtle.detect() then
    turtle.dig()
  end
end

function moveForward()
  local attempts = 0
  while not turtle.forward() do
    if attempts >= 10 then
      print("Konnte nicht vorw√§rts gehen. Blockiert.")
      return false
    end
    clearBlockFront()
    attempts = attempts + 1
    sleep(0.5)
  end
  return true
end

function digAndScanForward()
  refuel()
  tryDig("front")
  tryDig("up")
  tryDig("down")

  clearBlockDown()

  local success = moveForward()
  if not success then
    return false
  end
  return true
end

function digDownToDepth()
  for i = 1, 50 do
    refuel()
    if turtle.detectDown() then
      turtle.digDown()
    end
    if not turtle.down() then
      break
    end
  end
end

function tunnel3x3(length)
  for i = 1, length do
    local success = digAndScanForward()
    if not success then
      print("Tunnel blockiert. Stoppe.")
      return
    end
    turtle.turnLeft()
    tryDig("front")
    turtle.turnRight()
    turtle.turnRight()
    tryDig("front")
    turtle.turnLeft()
  end
end

function stripMineLeft(count, spacing, depth)
  for i = 1, count do
    turtle.turnLeft()
    for j = 1, depth do
      local success = digAndScanForward()
      if not success then
        print("Stripmine blockiert. Stoppe.")
        return
      end
    end
    for j = 1, depth do
      turtle.back()
    end
    turtle.turnRight()
    for s = 1, spacing do
      local success = digAndScanForward()
      if not success then
        print("Stripmine Abstand blockiert. Stoppe.")
        return
      end
    end
  end
end

function returnToStart(mainTunnelLength, stripCount, spacing)
  for i = 1, stripCount * spacing do
    turtle.back()
  end
  turtle.turnLeft()
  for i = 1, mainTunnelLength do
    turtle.back()
  end
end

function dropInventory()
  turtle.turnLeft()
  turtle.turnLeft()
  for i = 1, 16 do
    turtle.select(i)
    turtle.drop()
  end
  turtle.turnLeft()
  turtle.turnLeft()
end

-- Hauptprogramm
local mainTunnelLength = 30
local stripCount = 6
local spacing = 2
local stripDepth = 200

refuel()
digDownToDepth()
tunnel3x3(mainTunnelLength)
stripMineLeft(stripCount, spacing, stripDepth)
returnToStart(mainTunnelLength, stripCount, spacing)
dropInventory()
