-- miningTurtle.lua

-- Funktionen definieren
function tunnel(length)
    for i = 1, length do
        while turtle.detect() do
            turtle.dig()
        end
        turtle.forward()
    end
end

function stripMine(branches, length)
    for i = 1, branches do
        tunnel(length)
        turtle.turnLeft()
        turtle.turnLeft()
        tunnel(length)
        turtle.turnRight()
        turtle.forward()
        turtle.turnRight()
    end
end

function branchMine(branchCount, branchLength, spacing)
    for i = 1, branchCount do
        tunnel(spacing)
        turtle.turnLeft()
        tunnel(branchLength)
        turtle.turnLeft()
        turtle.turnLeft()
        tunnel(branchLength)
        turtle.turnLeft()
    end
end

-- Benutzerinteraktion
print("Was möchtest du machen?")
print("1: Tunnel graben")
print("2: Stripmining")
print("3: Branchmining")

local auswahl = read()

if auswahl == "1" then
    print("Wie lang soll der Tunnel sein?")
    local len = tonumber(read())
    tunnel(len)

elseif auswahl == "2" then
    print("Wie viele Gänge?")
    local gänge = tonumber(read())
    print("Wie lang sollen die Gänge sein?")
    local länge = tonumber(read())
    stripMine(gänge, länge)

elseif auswahl == "3" then
    print("Wie viele Äste?")
    local anzahl = tonumber(read())
    print("Wie lang sollen die Äste sein?")
    local länge = tonumber(read())
    print("Wie weit auseinander sollen sie sein?")
    local abstand = tonumber(read())
    branchMine(anzahl, länge, abstand)

else
    print("Ungültige Eingabe.")
end
